// @see - https://www.electron.build
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "asar": true,
  "appId": "csp",
  "productName": "csp",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "extraFiles": [
    {
      "from": "resources",
      "to": "resources",
      "filter": ["**/*"]
    },
    {
      "from": "server/public",
      "to": "resources/server/public",
      "filter": ["**/*"]
    },
    {
      "from": "server",
      "to": "resources/server",
      "filter": ["**/*.py", "**/__init__.py", "**/*.yaml", "**/*.yml", "**/*.json", "**/*.txt"]
    }
  ],
  "mac": {
    "target": [
      "dmg"
    ],
    "extraFiles": [
      {
        "from": "build-server/csp-server",
        "to": "resources/server/csp-server",
        "filter": ["**/*"]
      }
    ],
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "build-server/csp-server.exe",
        "to": "resources/server/csp-server.exe",
        "filter": ["**/*"]
      }
    ],
    "icon": "resources/images/logo.ico",
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "extraFiles": [
      {
        "from": "build-server/csp-server",
        "to": "resources/server/csp-server",
        "filter": ["**/*"]
      }
    ],
    "artifactName": "${productName}-Linux-${version}.${ext}"
  }
}
